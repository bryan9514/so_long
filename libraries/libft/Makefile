# ------------------ VARIABLES PRINCIPALES ------------------

NAME		:= libft.a
INCDIR		:= inc
OBJDIR		:= obj

# Carpetas de mÃ³dulos
SRCDIRS		:= libft ft_printf get_next_line

# Archivos fuente (busca todos los .c en los subdirectorios)
SRC			:= $(foreach dir, $(SRCDIRS), $(wildcard $(dir)/*.c))
OBJ			:= $(patsubst %.c, $(OBJDIR)/%.o, $(SRC))

# Compilador y flags
CC			:= cc
CFLAGS		:= -Wall -Wextra -Werror -I$(INCDIR)

# ------------------ REGLAS ------------------

all: $(NAME)

# Compilar librerÃ­a
$(NAME): $(OBJ)
	@ar rcs $@ $^
	@echo "âœ… Library created: $(NAME)"

# CompilaciÃ³n de cada archivo .c en su .o en la carpeta obj/
$(OBJDIR)/%.o: %.c
	@mkdir -p $(dir $@)
	@$(CC) $(CFLAGS) -c $< -o $@

# Limpiar objetos
clean:
	@rm -rf $(OBJDIR)
	@echo "ðŸ§¹ clean done."

# Limpiar objetos y la librerÃ­a
fclean: clean
	@rm -f $(NAME)
	@echo "ðŸ§½ fclean done."

# Recomponer todo
re: fclean all

.PHONY: all clean fclean re
